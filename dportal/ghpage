cd `dirname $0`
echo "pushing the static pages into the gh_pages branch, not sure how well this will work"

rm -rf static

git clone --no-checkout --branch gh-pages -- ../ static

./build

# make real data

rm static/jslib -rf
cp -r ../ctrack/jslib static/

rm static/art -rf
cp -r ../ctrack/art static/

cd static
git add . --all
git commit -a -m "$*"
git push

rm -rf static
